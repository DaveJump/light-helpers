{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "esnext"
    ],
    "removeComments": false,
    "experimentalDecorators": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "outDir": "./lib",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declarationDir": "./lib/types",
    "typeRoots" : [
      "./node_modules/@types",
      "./typings"
    ]
  },
  "include": [
    "src",
    "typings"
  ]
}
